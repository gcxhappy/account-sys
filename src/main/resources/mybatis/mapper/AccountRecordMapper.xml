<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.caacetc.gcx.account.domain.AccountRecordMapper">
    <select id="queryAllRecords" resultType="AccountRecord">
        select * from AccountRecord
    </select>

    <insert id="addRecord" parameterType="AccountRecord">
        insert into AccountRecord values
          (#{accountName}, #{accountType}, #{contentType},#{note},#{amount},#{recordTime})
    </insert>
</mapper>